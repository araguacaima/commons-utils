<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.araguacaima.exception" level="off" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.araguacaima.exception.core" level="off" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.araguacaima.utils" level="off" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="trace">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>